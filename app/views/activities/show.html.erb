<%= line_chart @the_activity.exercises.group_by_day(:created_at).count %>

<div class="container">
  <div class="card">
    <div class="card-body">
      <h1 class="card-title">
        <%= @the_activity.name.upcase %>
      </h1>

      <div class="d-flex justify-content-between">
        <div>
          <a href="/activities" class="btn btn-outline-secondary">
            Go back
          </a>
        </div>

        <div>
          <a href="/delete_activity/<%= @the_activity.id %>" class="btn btn-danger">
            Delete activity
          </a>
        </div>
      </div>

      <hr>

      <dl class="row">
        <div class="col-6">
          <dt>
            Equipments
          </dt>
          <dd>
            <%= @the_activity.equipments.capitalize %>
          </dd>

          <dt>
            Description
          </dt>
          <dd>
            <%= @the_activity.description %>
          </dd>

          <dt>
            Target muscle
          </dt>
          <dd>
            <%= @the_activity.target_muscle.capitalize %>
          </dd>
        </div>

        <div class="col-6">
          <dd>
            <img src="<%= @the_activity.image %>" style="width: 100%; max-height: 300px;" class="img-fluid">
          </dd>
        </div>
      </dl>
    </div>
  </div>
</div>

<hr>

<div class="container">
  <div class="card">
    <div class="card-body">
      <form action="/modify_activity/<%= @the_activity.id %>" method="post">
        <div class="mb-3">
          <label for="name_box" class="form-label">
            Name
          </label>
          <input type="text" id="name_box" name="query_name" value="<%= @the_activity.name %>" class="form-control">
        </div>

        <div class="mb-3">
          <label for="image_box" class="form-label">
            Image
          </label>
          <input type="text" id="image_box" name="query_image" value="<%= @the_activity.image %>" class="form-control">
        </div>

        <div class="mb-3">
          <label for="equipments_box" class="form-label">
            Equipments
          </label>
          <input type="text" id="equipments_box" name="query_equipments" value="<%= @the_activity.equipments %>" class="form-control">
        </div>

        <div class="mb-3">
          <label for="description_box" class="form-label">
            Description
          </label>
          <textarea id="description_box" name="query_description" class="form-control"><%= @the_activity.description %></textarea>
        </div>

        <div class="mb-3">
          <label for="target_muscle_box" class="form-label">
            Target muscle
          </label>
          <input type="text" id="target_muscle_box" name="query_target_muscle" value="<%= @the_activity.target_muscle %>" class="form-control">
        </div>
            <button type="submit" class="btn btn-primary">
      Edit Exercise
    </button>
  </form>
</div>
</div>
</div>
